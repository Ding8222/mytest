<!--
服务器模块参数：

GroupID					组ID，[0,99]一机多服使用，启用的时候，DBIP可能需要修改一下

Over_Time				服务器超时重连时间
Ping_Time				服务器Ping时间
Elapsed_Log				是否开启超时log

LogServer_IP			日志服务器IP
LogServer_Port			日志服务器端口
LogServer_ID			日志服务器ID

CenterServer_IP			中心服务器IP
CenterServer_Port		中心服务器端口
CenterServer_ID			中心服务器ID

NameCheckServer_IP		名称检查服务器IP
NameCheckServer_Port	名称检查服务器端口
NameCheckServer_ID		名称检查服务器ID

DBName              	库名
DBUser              	用户名
DBPass              	密码
DBIP                	IP

-->

<Base 
	Group_ID = "0"
	Over_Time = "500000"
	Ping_Time = "100000"
	Elapsed_Log = "true"
		
	LogServer_ID = "6000"
	LogServer_Port = "6001"
	LogServer_IP = "127.0.0.1"
	LogServer_Name = "LogServer"
	
	CenterServer_ID = "1000"
	CenterServer_Port = "1001"
	CenterServer_IP = "127.0.0.1"
	CenterServer_Name = "CenterServer"
	
	NameCheckServer_ID = "7000"
	NameCheckServer_Port = "7001"
	NameCheckServer_IP = "127.0.0.1"
	NameCheckServer_Name = "NameCheckServer"
	
	DBName = "test"
	DBUser = "root"
	DBPass = "root"
	DBIP = "127.0.0.1:3306"
	>
